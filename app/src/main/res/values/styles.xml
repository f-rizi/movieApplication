<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/blue_gray_500</item>
        <item name="android:colorPrimaryDark">@color/blue_gray_700</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:colorAccent">@color/Amber_700</item>
        <item name="android:colorControlHighlight">@color/gray_400</item>

        <!-- Transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/grid_detail_transition</item>
        <item name="android:windowExitTransition">@transition/grid_detail_transition</item>

        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="slidingTabText" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="mainToolBarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/blue_gray_500</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>


    <style name="transparentToolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="mainToolBarPopupStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/blue_gray_500</item>
        <item name="android:textColorSecondary">@color/blue_gray_700</item>
        <item name="android:background">@color/teal_600</item>
    </style>

    <style name="MainActionBarThemeOverlay" parent="">
        <item name="android:colorControlNormal">@color/blue_gray_500</item>
        <item name="android:colorControlHighlight">@color/Amber_700</item>
    </style>

    <style name="DetailActionBar" parent="android:Widget.Material.Light.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_up_white</item>
        <item name="android:displayOptions">homeAsUp</item>
    </style>

    <style name="BaseAppTheme" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">@color/blue_gray_500</item>
        <item name="android:colorPrimaryDark">@color/blue_gray_700</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:colorAccent">@color/Amber_700</item>
        <item name="android:colorControlHighlight">@color/gray_300</item>
        <item name="android:navigationBarColor">?android:colorPrimaryDark</item>
        <item name="android:statusBarColor">?android:colorPrimaryDark</item>
        <!--<item name="actionBarIconColor">#fff</item>-->
        <!--<item name="android:windowBackground">@color/white</item>-->

        <!-- Transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/grid_detail_transition</item>
        <item name="android:windowExitTransition">@transition/grid_detail_transition</item>

        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="movieDetailTheme" parent="BaseAppTheme">
        <item name="android:actionBarTheme">@style/MainActionBarThemeOverlay</item>
        <item name="android:actionBarStyle">@style/DetailActionBar</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/blue_gray_500</item>
        <item name="colorPrimaryDark">@color/blue_gray_700</item>
        <item name="colorAccent">@color/Amber_700</item>
    </style>
</resources>
